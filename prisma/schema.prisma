generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model fatos {
  id      Int     @id @default(autoincrement())
  fato    String  @unique
  criador String?
}

model user {
  number    String  @id @unique @db.Char(28)
  name      String
  blacklist Boolean @default(false)

  gaming   gaming[]
  stickers stickers[]
}

model group {
  number        String  @id @unique
  enable        Boolean @default(false)
  blacklist     Boolean @default(false)
  TOKEN_OPEANAI String? @unique
}

model gaming {
  id    Int    @id @default(autoincrement())
  name  String
  xp    Int    @default(0)
  level Int    @default(0)
  rank  String @default("Bronze")
  owner String

  user user @relation(fields: [owner], references: [number])
}

model rank {
  id        Int    @id @default(autoincrement())
  name      String
  positon   Int    @default(0)
  min_level Int    @default(0)
}

model stickers {
  id          Int    @id @default(autoincrement())
  url_sticker String @db.LongText
  name        String
  owner       String

  user user @relation(fields: [owner], references: [number])
}
