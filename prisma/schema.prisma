generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model fatos {
  id      Int     @id @default(autoincrement())
  fato    String  @unique
  criador String?
}

model user {
  number    String     @id @unique
  name      String
  blacklist Boolean    @default(false)
  gaming    gaming[]
  stickers  stickers[]
}

model group {
  number        String  @id @unique
  enable        Boolean @default(false)
  blacklist     Boolean @default(false)
  TOKEN_OPEANAI String? @unique
}

model gaming {
  id      Int    @id @default(autoincrement())
  nome    String
  xp      Int    @default(0)
  level   Int    @default(0)
  rank    String @default("Bronze")
  criador String
  user    user   @relation(fields: [criador], references: [number])
}

model stickers {
  id          Int    @id @default(autoincrement())
  url_sticker String @db.LongText
  name        String
  criador     String
  user        user   @relation(fields: [criador], references: [number])
}
